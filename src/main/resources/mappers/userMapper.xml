<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.Asiana_lab.model.dao.UserDao">

    <insert id="insert" >
        INSERT INTO "User"
        VALUES(user_seq.nextval, #{userid}, #{password}, #{email}, #{passport}, #{birthday}, #{mileage}, #{isAdmin})
    </insert>

    <select id="selectIdByUserid" parameterType="String" resultType="User">
        select * from "User" u  where "userid"  = #{userid}
    </select>
    <select id="selectOneById" parameterType="String" resultType="User">
        select * from "User" u  where "userid"  = #{userid}
    </select>
    <select id="selectOneByEmail" parameterType="String" resultType="User">
        select * from "User" u  where "userid"  = #{userid}
    </select>
    <update id="changeId" parameterType="String">
        UPDATE "User" SET "userid" = #{userid} WHERE "password" = #{password}
    </update>

    <update id="changePw" parameterType="String">
        UPDATE "User" SET "password" = #{password} WHERE "userid" = #{userid}
    </update>

    <delete id="user_delete" parameterType="String">
        delete from "User" where "userid"=#{userid}
    </delete>

</mapper>